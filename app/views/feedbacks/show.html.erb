  <img src= <%= "data:image/jpeg;base64," + @feedback.image1 %> /><br>
<% end %>

<% if @feedback.image2 != nil %>
  <img src= <%= "data:image/jpeg;base64," + @feedback.image2 %> /><br>
<% end %>

