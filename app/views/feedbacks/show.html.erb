  <img src= <%= "data:image/jpeg;base64," + @feedback.image5 %> /><br>
<% end %>


<div class="container" align="center">
      <div class="container" align="center">
        <div class="well profile" style="background-color: #F8F8FF;">
          <div class="row">
            <div class="span2 offset1" align="left">
              <%=link_to raw('<i class="icon-arrow-left icon-3x"></i>'), feedbacks_path %>
            </div>
            <div align="left">
              <h2>Feedback</h2>
            </div>
          </div>
          <div class="divider"></div>
          <div class="row">
              <div class="span4 offset1" align="left">
                <h3><%= @feedback.title %></h3>
              </div>
              <div class="span2" align="right">
                <h4><%= @feedback.created_at.strftime("%-d %b %Y %l:%M%P") %></h4>
              </div>
          </div><br>
          <div class="row">
            <div class="span3 offset1" align="left">
              <i class="icon-map-marker icon-2x"></i><strong><%= @feedback.detailed_location %></strong> | <strong><%= @feedback.address %></strong>
            </div>
            <div class="span3" align="right">
              <strong style="color: red; font-size: 24px"><%= @feedback.status %></strong>
            </div>
          </div>
          <div class="row">
            <div class="span6 offset1">             
              <div id="carousel" class="carousel slide carousel-fade" data-ride="carousel">
                <ol class="carousel-indicators">
                  <li data-target="#carousel" data-slide-to="0" class="active"></li>
                </ol>
                <!-- Carousel items -->
                <div class="carousel-inner">
                  <div class="active item"></div>
                </div>
                <!-- Carousel nav -->
                <a class="carousel-control left" href="#carousel" data-slide="prev">&lsaquo;</a>
                <a class="carousel-control right" href="#carousel" data-slide="next">&rsaquo;</a>
              </div>
            </div>
          </div>
          <div class="divider"></div>
            <div class="row">
              <div class="span4">
                <div class="col-xs-12 col-sm-4 emphasis">              
                  <i class="icon-hand-up icon-3x"></i><big><strong> 0 Votes</strong></big>
                </div>
              </div>  
              <div class="span4"> 
                <div class="col-sm-4 emphasis">                   
                  <i class="icon-comments icon-3x"></i><big><strong> 0 Comments</strong></big>
                </div>
              </div>
            </div><br>
            <div class="divider"></div><br>
            <div class="row" align="left">
              <div class="span6 offset1">
	              <p><strong><%= @nickname %></strong></p>
	              <%= @feedback.details %>
              </div>
            </div><br>
            <div class="divider"></div>
            <div class="row" align="left">
              <div class="span6 offset1">
                <h4 align="center">Comments</strong>
              </div>
            </div><br>
            <div class="divider"></div>
            <div class="row" align="left">
              <div class="span6 offset1">
                <h4 align="center">Google Map</strong>
              </div>
            </div>
            <div class="row" align="left">
              <div class="span6 offset1">
                <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@feedback.latitude}%2C#{@feedback.longitude}"%>
              </div>
            </div><br>
            <div class="divider"></div><br>
        </div>                
      </div>