<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>   

<div class="wrapper">
    <div class="box">
        <div class="row row-offcanvas row-offcanvas-left">
          <div class="row">
            <div class="column col-md-12" id="main">
              <h1 style="word-wrap: break-word;"><strong><%= @feedback.title %></strong></h1>
              <br>
            </div>
          </div>
          <div class="row">
            <div class="column col-md-7" id="main">
              <div class="panel">
                <div class="panel-body">
                    <div id="carousel" class="carousel slide carousel-fade" data-ride="carousel">
                      <ol class="carousel-indicators">
                        <% if @feedback.image1 != nil %>
                          <li data-target="#carousel" data-slide-to="0" class="active"></li>
                        <% end %>
                        <% if @feedback.image2 != nil %>
                          <li data-target="#carousel" data-slide-to="1" ></li>
                        <% end %>
                        <% if @feedback.image3 != nil %>
                          <li data-target="#carousel" data-slide-to="2" ></li>
                        <% end %>
                        <% if @feedback.image4 != nil %>
                          <li data-target="#carousel" data-slide-to="3" ></li>
                        <% end %>
                        <% if @feedback.image5 != nil %>
                          <li data-target="#carousel" data-slide-to="4" ></li>
                        <% end %>
                      </ol>
                      <!-- Carousel items -->
                    <div class="carousel-inner" align="center">
                                          <% if @feedback.image1 != nil %>
                                            <div class="active item"><img src= <%= "data:image/jpeg;base64," + @feedback.image1 %> style="width: 800px; height: 310px;"/></div>
                                          <% end %>
                                          <% if @feedback.image2 != nil %>
                                            <div class="item"><img src= <%= "data:image/jpeg;base64," + @feedback.image2 %> style="width: 800px; height: 310px;"/></div>
                                          <% end %>
                                          <% if @feedback.image3 != nil %>
                                            <div class="item"><img src= <%= "data:image/jpeg;base64," + @feedback.image3 %> style="width: 800px; height: 310px;"/></div>
                                          <% end %>
                                          <% if @feedback.image4 != nil %>
                                            <div class="item"><img src= <%= "data:image/jpeg;base64," + @feedback.image4 %> style="width: 800px; height: 310px;"/></div>
                                          <% end %>
                                          <% if @feedback.image5 != nil %>
                                            <div class="item"><img src= <%= "data:image/jpeg;base64," + @feedback.image5 %> style="width: 800px; height: 310px;"/></div>
                                          <% end %>
                                        </div>
                                        <!-- Carousel nav -->
                                        <a class="carousel-control left" href="#carousel" data-slide="prev">&lsaquo;</a>
                                        <a class="carousel-control right" href="#carousel" data-slide="next">&rsaquo;</a>
                                      </div>
                                    </div>
                                  </div>
                                    <div class="clearfix"></div>
              <br>
              <div class="panel">
                <div class="panel-body" style="word-wrap: break-word;">
                  <h3 align="center"><b>Description</b></h3>
                  <div class="horizontal-line"></div>
                  <strong><h4><%= @feedback.details %></h4></strong>
                </div>
              </div>
              <div class="panel">
                <div class="panel-body" style="word-wrap: break-word;">
                  <h3 align="center"><b>Comments</b></h3>
                  <hr>
                  <strong><h1 align="center">LIST OF COMMENTS</h1></strong>
                </div>
              </div>
            </div>
            <div class="column col-md-5" id="main">
              <strong>Nickname: </strong> <b style="color: red;"><%= @nickname %></b>
              <div class="horizontal-line"></div>
              <strong>Status: </strong><b style="color: red;"><%= @feedback.status %></b>
              <div class="horizontal-line"></div>
              <b>Time Reported: </b><%= @feedback.created_at.strftime("%-d-%b-%Y %l:%M%P") %>
              <div class="horizontal-line"></div>
              <b>Location: </b><i class="icon-map-marker icon-2x"></i><%= @feedback.detailed_location %> | <%= @feedback.address %>
              <div class="horizontal-line"></div>
              <b>Votes: </b><big><strong> 0 </strong></big>
              <div class="horizontal-line"></div>
              <b>Comments: </b><big><strong> 0 </strong>
              <div class="horizontal-line"></div>
              <br>
              <div align="center">
                <h3 align="center"><b>Google Map</b></h3>
                <div id="map" style='width: 440px; height: 300px' align="center"></div>
                  <script style="text/javascript">
                    handler = Gmaps.build('Google');
                    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
                    markers = handler.addMarkers(<%=raw @hash.to_json %>);
                    handler.bounds.extendWith(markers);
                    handler.fitMapToBounds();
                        });
                  </script>
                </div>
            </div>
          </div>

